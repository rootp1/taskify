<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>practice1</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
<div class="main w-full min-h-screen bg-zinc-900 flex flex-col items-center py-10">
  <div class="form w-3/4 md:w-1/2 lg:w-1/3 p-5 bg-zinc-800 rounded-lg shadow-md">
    <form action="/upload" method="POST">
      <input class="text-white w-full rounded-lg block px-5 py-2 bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500" 
             type="text" name="title" placeholder="Title goes here">
      <br>
      <textarea class="text-white w-full rounded-lg block px-5 py-2 bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500" 
                name="content" placeholder="Write your task details"></textarea>
      <br>
      <input type="submit" class="bg-blue-500 hover:bg-blue-600 transition text-white px-4 py-2 rounded-lg mt-2 w-full" value="Create Task">
    </form>
  </div>

  <div class="task-container mt-10 w-3/4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
    <% if (files.length > 0) { %>
      <% files.forEach(function(val) { %>
        <div class="task px-4 py-5 bg-zinc-800 rounded-lg shadow-md transition transform hover:scale-105">
          <h1 class="text-white text-lg font-semibold truncate"><%= val %></h1>
          <a href="/file/<%= val %>" class="text-blue-400 hover:underline">Read More</a>
          <br>
          <a href="/edit/<%= val %>" class="bg-blue-500 text-white px-3 py-1 rounded mt-2 inline-block hover:bg-blue-600 transition">Edit</a>
        </div>
      <% }); %>
    <% } else { %>
      <h3 class="text-white text-center col-span-full">No tasks yet</h3>
    <% } %>
  </div>
</div>
</body>
</html>
